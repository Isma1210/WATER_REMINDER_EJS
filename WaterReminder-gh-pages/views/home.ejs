<header id="home" class="header">
        <div class="overlay"></div>

        <div id="header-carousel" class="carousel slide carousel-fade" data-ride="carousel">  
            <div class="container">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="carousel-caption d-none d-md-block">
                            <!-- <h1 align="center"><font color="#F2D049">Objetivo de agua de </font></h1>
                            <h1 align="center">1200mL</h1> -->
                            <h1 align="center"><font color="#F2D049">Bienvenido</font></h1>
                            <h1 align="center"><%= nombre %></h1>
                            <br>
                            <h1 align="center"><font color="#F2D049">Hoy debes beber:</font></h1>
                            <h1 align="center"><%= tuAgua %>mL</h1>
                            <h1 align="center"><font color="#F2D049">Has consumido en total:</font></h1>
                            <h1 align="center"><%= totalAgua %>mL</h1>
                            <div id="animacion">
                                <img src="resources/agua.gif"  height="200px" width="200px"> 
                            </div><br>
                            <div class="regAgua">
                                <form name="confirmarconsumo" action="/addWater" method="post">
                                    <h3 align="center">
                                        <select name="taza" id="">
                                            <option value="200">200mL</option>
                                            <option value="400">400mL</option>
                                            <option value="500">500mL</option>
                                            <option value="600">600mL</option>
                                            <option value="800">800mL</option>
                                            <option value="1000">1000mL</option>
                                            <option value="1500">1500mL</option>
                                        </select>
                                    </h3>
                                    <div align="center" id="confirmarconsumo" > 
                                        <button class="btn btn-primary" type="submit">Confirmar consumo</button>
                                    </div>
                                </form>
                            </div>
                            <br>
							<form name="registrodiario" action="/"><center>
						        <table class="tabla" width="900" >
                                    <tbody>
                                        <% consumoUser.forEach((user)=>{%> 
                                        <tr>
                                            <td><img src="resources/agua.gif"  height="70px" width="70px"></td>
                                            <td><%= user.Consumo_Total %></td>
                                            <td><%= user.Fecha %></td>
                                            <td><a href="/delWater/<%= user.idConsumo_Agua %>"> <img src="resources/basura.png" style="height: 40px; width:40px;"> </a></td>
                                        </tr>
                                        <%})%>
                                    </tbody>
                                </table></center>
                            </form>
                        </div>
                    </div>
                </div>
            </div>        
        </div>
    
	</header>
    <header id="home" class="header">
        <div class="overlay">
         
        </div>

        
    
        
	<!-- core  -->
    <script src="resources/assets/vendors/jquery/jquery-3.4.1.js"></script>
